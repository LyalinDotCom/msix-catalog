<Page x:Class="msix_catalog_app.Views.SystemAppsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:msix_catalog_app.Views"
      xmlns:viewModels="clr-namespace:msix_catalog_app.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SystemAppsPage">

    <Page.DataContext>
        <viewModels:PackagesViewModel />
    </Page.DataContext>

    <Grid DataContext="{Binding}">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="System Apps" FontSize="24" Margin="5" />
            <ListView ItemsSource="{Binding SystemPackages}" 
                      ItemTemplate="{StaticResource PackageInfoTemplate}"
                      VerticalContentAlignment="Top"
                      ScrollViewer.VerticalScrollBarVisibility="Auto" 
                      MaxHeight="{Binding RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Grid}},Path=ActualHeight}" />
        </StackPanel>
    </Grid>
</Page>
